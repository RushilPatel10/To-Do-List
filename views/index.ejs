<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 80%;
            max-width: 600px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            margin-bottom: 20px;
        }

        input[type="text"] {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
            outline: none;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50;
            border: none;
            color: #fff;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 12px 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #4caf50;
            color: #fff;
        }

        td.actions {
            text-align: center;
        }

        button {
            padding: 6px 10px;
            background-color: #f44336;
            border: none;
            color: #fff;
            border-radius: 4px;
            cursor: pointer;
        }

        button.edit {
            background-color: #2196f3;
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>To-Do List</h1>
        <form action="/add" method="POST">
            <input type="text" name="task" placeholder="Enter task...">
            <input type="submit" value="Add Task">
        </form>
        <table>
            <tr>
                <th>Task</th>
                <th class="actions">Actions</th>
            </tr>
            <% tasks.forEach((task, index)=> { %>
                <tr>
                    <td>
                        <%= task %>
                    </td>
                    <td class="actions">
                        <form action="/edit/<%= index %>" method="POST" style="display:inline;">
                            <input type="text" name="newTask" placeholder="Edit task...">
                            <button type="submit" class="edit">Edit</button>
                        </form>
                        <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>
</body>

</html>